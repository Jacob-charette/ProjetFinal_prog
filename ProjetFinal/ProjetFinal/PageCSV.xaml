<Page
    x:Class="ProjetFinal.PageCSV"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjetFinal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Choisir la liste à exporter
                   " Margin="15" FontSize="40" 
           FontFamily="Terminal" FontWeight="SemiBold"
          />
        <Button Background="BurlyWood"   x:Name="BtnAdherent" Click="BtnAdherent_Click" Margin="20" Padding="20">
            Liste adherents
        </Button>
        <Button Background="BurlyWood" x:Name="BtnActivite" Click="BtnActivite_Click" Margin="20" Padding="20">
            Liste activités
        </Button>
    </StackPanel>
</Page>
